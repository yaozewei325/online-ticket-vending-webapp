@model List<Order>

@{ 
    ViewData["Title"] = "Commandes";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Liste des commandes</h4>
        </p>

        <table class="table">
            <thead>
                <tr>
                    <th>ID Commande</th>
                    <td>Articles</td>
                    <th>Total</th>
                    <th>Utilisateur</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                <tr>
                    <td class="align-middle">@order.Id</td>
                    <td class="align-middle">
                        <ul style="list-style-type:none">
                            @foreach (var item in order.OrderItems)
                            {
                                <li>
                                    <div class="alert alert-info" role="alert">
                                        <span class="badge bg-success">@item.Amount</span> [@item.Prix.ToString("c")] - @item.Concert.Nom
                                    </div>
                                </li>
                            }
                        </ul>
                    </td>
                    <td class="align-middle">
                        @order.OrderItems.Select(m => m.Concert.Prix * m.Amount).Sum().ToString("c")
                    </td>
                    <td class="align-middle"> - </td>
                </tr>
                }
            </tbody>
        </table>

    </div>
</div>