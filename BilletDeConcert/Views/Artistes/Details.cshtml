@model Artiste

@{
    ViewData["Title"] = "Détails de l'artiste";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Détails pour @Model.FullName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img class="border-info rounded-circle" style="max-width: 150px" id="PhotoPreview" />
                </div>
                <div class="form-group">
                    <label asp-for="PhotoURL" class="control-label"></label>
                    <input asp-for="PhotoURL" class="form-control" readonly />
                    <span asp-validation-for="PhotoURL" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control" readonly />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Bio" class="control-label"></label>
                    <input asp-for="Bio" class="form-control" readonly />
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>

                <div class="form-group">
              
                    <a class="btn btn-outline-secondary" asp-action="Index">Afficher Tous</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
<script>
    $(document).ready(function () {
        var output = $('#PhotoPreview')[0];
        output.src = $("#PhotoURL").val();
    })
</script>
}