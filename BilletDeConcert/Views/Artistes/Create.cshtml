@model Artiste
@{
    ViewData["Title"] = "Ajouter un nouvel artiste";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Ajouter un nouvel artiste</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group text-center">
                        <img id="PhotoPreview" class="border-info rounded-circle" style="max-width: 150px" />
                    </div>

                    <div class="form-group">
                        <label asp-for="PhotoURL" class="control-label"></label>
                        <input asp-for="PhotoURL" class="form-control" />
                        <span asp-validation-for="PhotoURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Bio" class="control-label"></label>
                        <input asp-for="Bio" class="form-control" />
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Afficher tout</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
<script>
       $(document).ready(function () {
            var output = $('#PhotoPreview')[0];
            output.src = $("#ProfilePictureURL").val();
        })

          $("#PhotoURL").on("change", function () {
        var output = $('#PhotoPreview')[0];
        output.src = $(this).val();
    })
</script>
}